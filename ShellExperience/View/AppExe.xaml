<UserControl x:Class="ShellExperience.View.AppExe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShellExperience.View" 
             xmlns:viewmodel="clr-namespace:ShellExperience.ViewModel" 
             x:Name="parent"
             Margin="5,5,5,5"
             Height="85" Width="120">
    <UserControl.Background>
        <SolidColorBrush Color="White" Opacity="0.001"></SolidColorBrush>
    </UserControl.Background>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Click="ItemRemove" Header="Remove" />
            <MenuItem Click="ItemShowInExplorer" Header="Show in Explorer" />
        </ContextMenu>
    </UserControl.ContextMenu>

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid  Grid.Row="0" Margin="8">
                <Image Source="{Binding UriImage , ElementName=parent}"></Image>
            </Grid>
            <Label Foreground="White" HorizontalContentAlignment="Center" Content="{Binding Text , ElementName=parent }" Grid.Row="2" FontWeight="Bold"/>
        </Grid>
    </Border>
</UserControl>
