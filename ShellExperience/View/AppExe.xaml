<UserControl x:Class="ShellExperience.View.AppExe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShellExperience.View" 
             xmlns:viewmodel="clr-namespace:ShellExperience.ViewModel" 
             x:Name="parent"
             Margin="5,5,5,5"
             Height="85" Width="120">


    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid  Grid.Row="0">
                <Image Source="{Binding UriImage , ElementName=parent}"></Image>
            </Grid>
            <Label Foreground="White" HorizontalContentAlignment="Center" Content="{Binding Text , ElementName=parent }" Grid.Row="2"></Label>
        </Grid>
    </Border>
</UserControl>
